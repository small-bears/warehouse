<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dao.HuowuxinxiDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.entity.HuowuxinxiEntity" id="huowuxinxiMap">
        <result property="huowumingcheng" column="huowumingcheng"/>
        <result property="huowuleixing" column="huowuleixing"/>
        <result property="huowutupian" column="huowutupian"/>
        <result property="huowuguige" column="huowuguige"/>
        <result property="huowushuliang" column="huowushuliang"/>
        <result property="huowuxiangqing" column="huowuxiangqing"/>
        <result property="youxiaoqizhi" column="youxiaoqizhi"/>
        <result property="cangkubianhao" column="cangkubianhao"/>
        <result property="cangkumingcheng" column="cangkumingcheng"/>
        <result property="cangkuweizhi" column="cangkuweizhi"/>
    </resultMap>

	<select id="selectListVO"
		resultType="com.entity.vo.HuowuxinxiVO" >
		SELECT * FROM huowuxinxi  huowuxinxi         
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectVO"
		resultType="com.entity.vo.HuowuxinxiVO" >
		SELECT  huowuxinxi.* FROM huowuxinxi  huowuxinxi 	
 		<where> 1=1 ${ew.sqlSegment}</where>
	</select>

    <select id="selectListView"
		resultType="com.entity.view.HuowuxinxiView" >

		SELECT  huowuxinxi.* FROM huowuxinxi  huowuxinxi 	        
        <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	
	<select id="selectView"
		resultType="com.entity.view.HuowuxinxiView" >
		SELECT * FROM huowuxinxi  huowuxinxi <where> 1=1 ${ew.sqlSegment}</where>
	</select>
	

    <select id="selectValue" resultType="map" >
        SELECT ${params.xColumn}, sum(${params.yColumn}) total FROM huowuxinxi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.xColumn}
    </select>

    <select id="selectTimeStatValue" resultType="map" >
        <if test = 'params.timeStatType == "日"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m-%d') ${params.xColumn}, sum(${params.yColumn}) total FROM huowuxinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m-%d')
        </if>
        <if test = 'params.timeStatType == "月"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y-%m') ${params.xColumn}, sum(${params.yColumn}) total FROM huowuxinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y-%m')
        </if>
        <if test = 'params.timeStatType == "年"'>
                SELECT DATE_FORMAT(${params.xColumn},'%Y') ${params.xColumn}, sum(${params.yColumn}) total FROM huowuxinxi
                <where> 1=1 ${ew.sqlSegment}</where>
                group by DATE_FORMAT(${params.xColumn},'%Y')
        </if>
    </select>
    
    <select id="selectGroup" resultType="map" >
        SELECT ${params.column} , count(1) total FROM huowuxinxi
        <where> 1=1 ${ew.sqlSegment}</where>
        group by ${params.column}
    </select>
</mapper>
